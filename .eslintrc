{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "globals": {
    "process": true
  },
  "rules": {
    "no-unused-vars": "off",
    "import/extensions": "off",
    "no-use-before-define" : "off",
    "func-names" : "off",
    "no-restricted-syntax" : "off",
    "no-param-reassign" : "off",
    "prefer-promise-reject-errors" : "off",
    "no-useless-escape" : "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "semi": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "useTabs": false,
        "parser": "babel",
        "jsxBracketSameLine": false,
        "endOfLine":"auto"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true,
        "allowAfterSuper": true
      }
    ]
  }
}
